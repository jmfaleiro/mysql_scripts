[mysqld]
server-id=1
pid-file=mysqld.1.pid
basedir=.
datadir=data/mysqld.1
innodb_data_home_dir=data/mysqld.1
#innodb_data_file_path=ibdata1:2G:autoextend
innodb_data_file_path=ibdata1
innodb_log_group_home_dir=data/mysqld.1/myrocks
port=3306
socket=mysqld.1.sock

max_binlog_size=1G
binlog_cache_size=262144
max_binlog_cache_size=666G

tmpdir=/tmp
slave_load_tmpdir=/tmp

collation-server=latin1_bin
default-storage-engine=innodb
default-tmp-storage-engine=MyISAM

# log-bin=binlog 
# sync_binlog=0 
# binlog_format=row

innodb_buffer_pool_size=32G
innodb_log_file_size=4G
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
innodb_log_waits=0
innodb_log_buffer_size=1G

transaction-isolation=READ-COMMITTED

user=root

[client]
user=root
port=3306
socket=data/mysqld.1/mysqld.1.sock
